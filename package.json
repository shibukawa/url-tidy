{
    "name": "url-tidy",
    "version": "0.5.2",
    "type": "module",
    "files": [
        "dist",
        "package.json"
    ],
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "require": "./dist/index.cjs",
            "import": "./dist/index.js"
        }
    },
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "scripts": {
        "build": "tsup",
        "test": "vitest",
        "format": "biome format --write ./src",
        "lint": "biome lint --error-on-warnings ./src"
    },
    "tsup": {
        "target": "es2020",
        "format": [
            "cjs",
            "esm"
        ],
        "entry": [
            "src/index.ts",
            "!src/*.spec.ts"
        ],
        "splitting": false,
        "sourcemap": true,
        "clean": true,
        "dts": true
    },
    "devDependencies": {
        "@biomejs/biome": "1.9.4",
        "tsup": "^8.3.5",
        "typescript": "~5.7.2",
        "vitest": "^2.1.8"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/shibukawa/url-tidy"
    }
}
